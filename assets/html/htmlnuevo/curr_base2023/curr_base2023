        let shuffledQuestions = [];
        let currentQuestionIndex = 0;
        let score = 0;
        let selectedOption = null;
        let answeredCorrectly = false;

        const questionTextElement = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const feedbackElement = document.getElementById('feedback');
        const submitBtn = document.getElementById('submit-btn');
        const nextBtn = document.getElementById('next-btn');
        const scoreDisplay = document.getElementById('score');
        const finalResultsContainer = document.getElementById('final-results');
        const quizContentContainer = document.getElementById('quiz-content');
        const finalScoreElement = document.getElementById('final-score');
        const generalFeedbackElement = document.getElementById('general-feedback');
        const restartBtn = document.getElementById('restart-btn');

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function loadQuestion() {
            if (currentQuestionIndex < shuffledQuestions.length) {
                const currentQuestion = shuffledQuestions[currentQuestionIndex];
                questionTextElement.textContent = `${currentQuestionIndex + 1}. ${currentQuestion.question}`;
                optionsContainer.innerHTML = '';
                feedbackElement.textContent = '';
                feedbackElement.className = 'feedback'; // Reset feedback class
                selectedOption = null;
                answeredCorrectly = false;
                submitBtn.disabled = true;
                nextBtn.disabled = true;

                currentQuestion.options.forEach(option => {
                    const button = document.createElement('button');
                    button.textContent = option;
                    button.onclick = () => selectOption(button, option);
                    optionsContainer.appendChild(button);
                });
            } else {
                showFinalResults();
            }
        }

        function selectOption(button, option) {
            // Remove 'selected' class from previously selected option
            if (selectedOption) {
                selectedOption.classList.remove('selected');
            }
            // Add 'selected' class to the new selected option
            button.classList.add('selected');
            selectedOption = button;
            submitBtn.disabled = false; // Enable submit button once an option is selected
        }

        function checkAnswer() {
            if (!selectedOption) {
                return; // No option selected
            }

            const currentQuestion = shuffledQuestions[currentQuestionIndex];
            const userAnswer = selectedOption.textContent;
            const correctAnswer = currentQuestion.answer;

            // Disable all options after submission
            Array.from(optionsContainer.children).forEach(button => {
                button.disabled = true;
                if (button.textContent === correctAnswer) {
                    button.classList.add('correct');
                } else if (button.textContent === userAnswer) {
                    button.classList.add('incorrect');
                }
            });

            if (userAnswer === correctAnswer) {
                score += 2.5;
                scoreDisplay.textContent = score;
                feedbackElement.textContent = `¡Correcto! ${currentQuestion.feedback} (Página ${currentQuestion.page})`;
                feedbackElement.classList.add('correct');
                answeredCorrectly = true;
            } else {
                feedbackElement.textContent = `Incorrecto. La respuesta correcta era: "${correctAnswer}". ${currentQuestion.feedback} (Página ${currentQuestion.page})`;
                feedbackElement.classList.add('incorrect');
                answeredCorrectly = false;
            }

            submitBtn.disabled = true; // Disable submit after checking
            nextBtn.disabled = false; // Enable next button
        }

        function showFinalResults() {
            quizContentContainer.classList.add('hidden');
            finalResultsContainer.classList.remove('hidden');
            finalScoreElement.textContent = `${score.toFixed(1)} / 100 puntos`;

            let generalFeedback = '';
            if (score >= 90) {
                generalFeedback = "¡Excelente trabajo! Demuestras un dominio excepcional del Currículo Base del Sistema Educativo Plurinacional. ¡Estás muy bien preparado/a!";
            } else if (score >= 70) {
                generalFeedback = "¡Muy bien! Tienes un sólido conocimiento del Currículo Base. Repasa las áreas donde tuviste dificultades para perfeccionar tu preparación.";
            } else if (score >= 50) {
                generalFeedback = "Tu conocimiento del Currículo Base es aceptable, pero hay áreas clave que necesitan más atención. Te sugiero un repaso profundo de los fundamentos y principios.";
            } else {
                generalFeedback = "Necesitas reforzar significativamente tu estudio del Currículo Base. Te recomiendo revisar el documento en su totalidad y enfocarte en las ideas centrales para mejorar tu comprensión.";
            }
            generalFeedbackElement.textContent = generalFeedback;
        }

        function restartQuiz() {
            currentQuestionIndex = 0;
            score = 0;
            scoreDisplay.textContent = 0;
            shuffledQuestions = shuffleArray([...questions]); // Reshuffle for new quiz
            finalResultsContainer.classList.add('hidden');
            quizContentContainer.classList.remove('hidden');
            loadQuestion();
        }

        // Event Listeners
        submitBtn.addEventListener('click', checkAnswer);
        nextBtn.addEventListener('click', () => {
            currentQuestionIndex++;
            loadQuestion();
        });
        restartBtn.addEventListener('click', restartQuiz);

        // Initial load
        restartQuiz(); // Call restart to initialize and shuffle questions
    </script>
</body>
</html>
