        let shuffledQuestions = [];
        let currentQuestionIndex = 0;
        let score = 0;
        const pointsPerQuestion = 2.8;
        let answeredQuestions = {}; // To store the selected option and correctness for each question

        const questionNumberElem = document.getElementById('question-number');
        const questionTextElem = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const feedbackArea = document.getElementById('feedback-area');
        const feedbackText = document.getElementById('feedback-text');
        const pageReference = document.getElementById('page-reference');
        const prevButton = document.getElementById('prev-button');
        const nextButton = document.getElementById('next-button');
        const submitButton = document.getElementById('submit-button');
        const currentScoreDisplay = document.getElementById('current-score');
        const quizContent = document.getElementById('quiz-content');
        const resultsScreen = document.getElementById('results-screen');
        const correctAnswersCountElem = document.getElementById('correct-answers-count');
        const totalQuestionsCountElem = document.getElementById('total-questions-count');
        const finalScoreElem = document.getElementById('final-score');
        const generalFeedbackElem = document.getElementById('general-feedback');
        const restartButton = document.getElementById('restart-button');

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function startQuiz() {
            shuffledQuestions = shuffleArray([...questions]);
            currentQuestionIndex = 0;
            score = 0;
            answeredQuestions = {};
            currentScoreDisplay.textContent = score.toFixed(1);
            quizContent.classList.remove('hidden');
            resultsScreen.classList.add('hidden');
            renderQuestion();
            updateNavigationButtons();
        }

        function renderQuestion() {
            const q = shuffledQuestions[currentQuestionIndex];
            questionNumberElem.textContent = `Pregunta ${currentQuestionIndex + 1} de ${shuffledQuestions.length}`;
            questionTextElem.textContent = q.question;
            optionsContainer.innerHTML = '';
            feedbackArea.classList.add('hidden');
            feedbackText.textContent = '';
            pageReference.textContent = '';

            const shuffledOptions = shuffleArray([...q.options]);

            shuffledOptions.forEach(option => {
                const button = document.createElement('button');
                button.classList.add('option-button');
                button.textContent = option;
                button.dataset.option = option;
                button.addEventListener('click', () => selectOption(button, q.correctAnswer, q.feedback, q.page));
                optionsContainer.appendChild(button);

                // If this question was already answered, show the previous selection and feedback
                if (answeredQuestions[currentQuestionIndex]) {
                    const savedAnswer = answeredQuestions[currentQuestionIndex];
                    if (option === savedAnswer.selectedOption) {
                        button.classList.add('selected');
                    }
                    if (option === savedAnswer.correctAnswer) {
                        button.classList.add('correct');
                    } else if (option === savedAnswer.selectedOption && option !== savedAnswer.correctAnswer) {
                        button.classList.add('incorrect');
                    }
                    button.disabled = true; // Disable buttons if already answered
                    showFeedback(savedAnswer.isCorrect, savedAnswer.feedback, savedAnswer.page);
                }
            });
            updateNavigationButtons();
        }

        function selectOption(selectedButton, correctAnswer, feedback, page) {
            // Disable all option buttons after selection
            Array.from(optionsContainer.children).forEach(button => button.disabled = true);

            const selectedOption = selectedButton.dataset.option;
            selectedButton.classList.add('selected');

            let isCorrect = false;
            if (selectedOption === correctAnswer) {
                selectedButton.classList.add('correct');
                score += pointsPerQuestion;
                isCorrect = true;
            } else {
                selectedButton.classList.add('incorrect');
                // Highlight the correct answer
                Array.from(optionsContainer.children).forEach(button => {
                    if (button.dataset.option === correctAnswer) {
                        button.classList.add('correct');
                    }
                });
            }

            // Save the answer state
            answeredQuestions[currentQuestionIndex] = {
                selectedOption: selectedOption,
                correctAnswer: correctAnswer,
                isCorrect: isCorrect,
                feedback: feedback,
                page: page
            };

            currentScoreDisplay.textContent = score.toFixed(1);
            showFeedback(isCorrect, feedback, page);
        }

        function showFeedback(isCorrect, feedback, page) {
            feedbackArea.classList.remove('hidden');
            feedbackArea.classList.remove('feedback-correct', 'feedback-incorrect');
            if (isCorrect) {
                feedbackArea.classList.add('feedback-correct');
                feedbackText.textContent = `¡Correcto! ${feedback}`;
            } else {
                feedbackArea.classList.add('feedback-incorrect');
                feedbackText.textContent = `Incorrecto. ${feedback}`;
            }
            pageReference.textContent = `Respuesta en la página ${page} del PDF.`;
        }

        function updateNavigationButtons() {
            prevButton.disabled = currentQuestionIndex === 0;
            nextButton.classList.toggle('hidden', currentQuestionIndex === shuffledQuestions.length - 1);
            submitButton.classList.toggle('hidden', currentQuestionIndex !== shuffledQuestions.length - 1);
        }

        prevButton.addEventListener('click', () => {
            if (currentQuestionIndex > 0) {
                currentQuestionIndex--;
                renderQuestion();
            }
        });

        nextButton.addEventListener('click', () => {
            if (currentQuestionIndex < shuffledQuestions.length - 1) {
                currentQuestionIndex++;
                renderQuestion();
            }
        });

        submitButton.addEventListener('click', () => {
            displayResults();
        });

        restartButton.addEventListener('click', () => {
            startQuiz();
        });

        function displayResults() {
            quizContent.classList.add('hidden');
            resultsScreen.classList.remove('hidden');

            let correctCount = 0;
            for (const key in answeredQuestions) {
                if (answeredQuestions[key].isCorrect) {
                    correctCount++;
                }
            }

            correctAnswersCountElem.textContent = correctCount;
            totalQuestionsCountElem.textContent = shuffledQuestions.length;
            finalScoreElem.textContent = score.toFixed(1);

            let feedbackMessage = '';
            const percentage = (correctCount / shuffledQuestions.length) * 100;

            if (percentage >= 90) {
                feedbackMessage = "¡Excelente trabajo! Demuestras un dominio excepcional de la Ley 548. Estás muy bien preparado.";
            } else if (percentage >= 70) {
                feedbackMessage = "¡Muy bien! Tienes un buen conocimiento de la Ley 548. Revisa las preguntas incorrectas para mejorar aún más.";
            } else if (percentage >= 50) {
                feedbackMessage = "Necesitas reforzar algunos conceptos. Te recomiendo revisar los artículos clave de la Ley 548 para mejorar tu puntuación.";
            } else {
                feedbackMessage = "Es importante que dediques más tiempo al estudio de la Ley 548. Repasa el documento detenidamente y vuelve a intentarlo.";
            }
            generalFeedbackElem.textContent = feedbackMessage;
        }

        // Initialize the quiz when the page loads
        document.addEventListener('DOMContentLoaded', startQuiz);
    </script>
</body>
</html>
